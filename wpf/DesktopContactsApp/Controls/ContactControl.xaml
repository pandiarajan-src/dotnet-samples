<UserControl x:Class="DesktopContactsApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="350">
    <Grid Background="#AAE5E5E5">
        <StackPanel>
            <TextBlock x:Name="ContactName" 
                                       Text="FirstName, LastName"
                                       FontSize="15" 
                                       FontWeight="Bold">
            </TextBlock>
            <TextBlock x:Name="ContactEmail" 
                                       Text="example@domain.com"
                                       FontSize="10" 
                                       Foreground="DarkBlue">
            </TextBlock>
            <TextBlock x:Name="ContactMobile" 
                                       Text="000-000-0000"
                                       FontSize="10" 
                                       FontStyle="Italic">
            </TextBlock>

        </StackPanel>
    </Grid>
</UserControl>
